<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- ___________________________ MyStyles ___________________________________ -->

    <style name="ListAppThema" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:listViewStyle">@style/WeatherListView</item>
    </style>

    <style name="WeatherListView" parent="@android:style/Widget.ListView">
        <item name="android:dividerHeight">@dimen/dimen_0dp</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="WhiteItalicTextView20" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/weather_details_text_size</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WhiteItalicTextView15" parent="WhiteItalicTextView20">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BlackBoldTextView25" parent="@android:style/Widget.TextView">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="WhiteItalicTextView30" parent="WhiteItalicTextView20">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TransparentWhiteTextView30" parent="@style/WhiteItalicTextView20">
        <item name="android:textSize">@dimen/main_screen_time_size</item>
        <item name="android:textColor">@color/lightWhite</item>
    </style>

    <style name="ListHeader" parent="@style/TransparentWhiteTextView30">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TransparentWhiteTextView60" parent="@style/TransparentWhiteTextView30">
        <item name="android:textSize">@dimen/main_screen_tempareture_size</item>
    </style>

</resources>
